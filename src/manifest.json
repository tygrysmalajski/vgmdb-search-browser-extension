{
  "manifest_version": 2,
  "name": "VGMdb Search",
  "version": "1.0",
  "description": "Adds VGMdb search engine",
  "icons": {
    "48": "icon.png",
    "96": "icon.png"
  },
  "browser_specific_settings": {
      "gecko" : {
          "strict_min_version": "65.0"
      }
  },
  "chrome_settings_overrides": {
      "search_provider": {
        "name": "VGMdb",
        "search_url": "https://vgmdb.net/search?q={searchTerms}",
        "keyword": "vgm",
        "favicon_url": "https://vgmdb.net/favicon.ico",
        "encoding" : "UTF-8"
      }
    }      
}